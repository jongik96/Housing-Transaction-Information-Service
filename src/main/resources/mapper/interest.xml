<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.repo.InterestRepo">

	<select id="getInterest" parameterType="String" resultType="InterestDto">
		select *
		from interest
		where userid = #{userid}
	</select>

	<insert id="registerInterest" parameterType="map">
		insert into interest
		values (#{userid}, #{dong})
	</insert>
	
	<delete id="deleteInterest" parameterType="map">
	delete from interest
	where userid = #{userid} and dong=#{dong}
	</delete>
	
</mapper>